@model BijuteriaProject.Data.Prilojenie

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтрий приложение</h1>

<h3>Наистина ли искате да изтриете това приложение?</h3>
<div>
    
    <hr />
   
    <dl class="row">
        <dt class="col-sm-2">
            Наименование:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Дата на промяна:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно към приложенията</a>
    </form>
</div>
