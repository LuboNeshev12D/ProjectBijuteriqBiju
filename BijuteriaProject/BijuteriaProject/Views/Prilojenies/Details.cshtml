@model BijuteriaProject.Data.Prilojenie

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли за приложение</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Наименование:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Описание:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           Дата на промяна:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary"asp-route-id="@Model?.Id">Промени</a> |
    <a asp-action="Index">Обратно към приложенията</a>
</div>
